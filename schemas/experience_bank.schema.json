{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonathan/resume-customizer/schemas/experience_bank.schema.json",
  "title": "Experience Bank",
  "description": "Canonical store of reusable experience stories",
  "type": "object",
  "required": ["stories"],
  "properties": {
    "stories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "company", "role", "start_date", "end_date", "bullets"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Stable identifier for the story"
          },
          "company": {
            "type": "string",
            "description": "Company name"
          },
          "role": {
            "type": "string",
            "description": "Job title/role"
          },
          "start_date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$",
            "description": "Start date in YYYY-MM format"
          },
          "end_date": {
            "type": "string",
            "pattern": "^(\\d{4}-\\d{2}|present)$",
            "description": "End date in YYYY-MM format or 'present'"
          },
          "bullets": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "text", "skills", "length_chars", "evidence_strength", "risk_flags"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Stable identifier for the bullet"
                },
                "text": {
                  "type": "string",
                  "description": "Bullet point text"
                },
                "skills": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Skills demonstrated in this bullet"
                },
                "metrics": {
                  "type": "string",
                  "description": "Quantified metrics (optional)"
                },
                "length_chars": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Character length of the bullet text"
                },
                "evidence_strength": {
                  "type": "string",
                  "enum": ["high", "medium", "low"],
                  "description": "Strength of evidence for this bullet"
                },
                "risk_flags": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Risk flags (e.g., 'needs_citation', 'unclear_metric')"
                }
              }
            }
          }
        }
      }
    }
  }
}

