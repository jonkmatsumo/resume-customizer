{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonathan/resume-customizer/schemas/state.schema.json",
  "title": "Pipeline State",
  "description": "Full pipeline state (optional, for DAG orchestration)",
  "type": "object",
  "properties": {
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this pipeline run"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when pipeline started"
    },
    "artifacts": {
      "type": "object",
      "properties": {
        "job_profile": {
          "type": "string",
          "description": "Path to job_profile.json"
        },
        "company_profile": {
          "type": "string",
          "description": "Path to company_profile.json"
        },
        "ranked_stories": {
          "type": "string",
          "description": "Path to ranked_stories.json"
        },
        "resume_plan": {
          "type": "string",
          "description": "Path to resume_plan.json"
        },
        "selected_bullets": {
          "type": "string",
          "description": "Path to selected_bullets.json"
        },
        "rewritten_bullets": {
          "type": "string",
          "description": "Path to rewritten_bullets.json"
        },
        "resume_tex": {
          "type": "string",
          "description": "Path to resume.tex"
        },
        "violations": {
          "type": "string",
          "description": "Path to violations.json"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "completed", "failed"],
      "description": "Current pipeline status"
    },
    "error": {
      "type": "string",
      "description": "Error message if status is failed"
    }
  }
}

